<div class='dnd5e chat-card item-card midi-qol-item-card'>
  <header class='card-header flexrow'>
    <img src='{{titleImg}}' title='{{title}}' width='36' height='36' />
    <h3 class='item-name'>{{title}}</h3>
  </header>
  <div class='card-content'>
    {{{messageContent}}}
    {{#if artImg}}
      <hr />
      <img src='{{artImg}}' title='{{title}}' width='272' height='272' />
    {{/if}}
  </div>
  <footer class='card-footer'>{{{footerContent}}}</footer>
</div>