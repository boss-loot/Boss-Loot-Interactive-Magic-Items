<form autocomplete="off">
  <section class="content">
    <div class="flexcol">
      <div class="form-group">
        <div id="settings-warning" class="settings-warning-body">
          <p class="warning-attention">ðŸ”´ <strong>Attention Required</strong></p>
          <ul class="warning-list">
            <li>
